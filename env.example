# Google Drive Transfer Configuration
# Copy this file to .env and fill in your actual values

# The ID of the shared folder you want to copy
# You can find this in the Google Drive URL: https://drive.google.com/drive/folders/YOUR_FOLDER_ID_HERE
GDRIVE_SOURCE_FOLDER_ID="your_folder_id_here"

# The content of your credentials.json file from Google Cloud Console
# This should be the entire JSON content as a single line string
# Example: GDRIVE_CREDENTIALS_JSON='{"installed":{"client_id":"...","client_secret":"...","auth_uri":"...","token_uri":"..."}}'
GDRIVE_CREDENTIALS_JSON='{"installed":{"client_id":"your_client_id","client_secret":"your_client_secret","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","redirect_uris":["http://localhost"]}}'

# Destination folder ID in your 'My Drive' (optional)
# If not set, files will be copied to the root of 'My Drive'
# To copy to a specific folder, set this to the folder ID of your destination folder
# GDRIVE_DESTINATION_PARENT_ID="your_destination_folder_id_here" 